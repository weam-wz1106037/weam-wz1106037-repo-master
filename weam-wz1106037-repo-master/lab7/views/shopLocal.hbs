<div class="container-fluid">
    <div class="page-header">
        <h2>Local Shop Products <small style="font-size: 14px">Last Visit Date & Time: {{date}}</small></h2>
    </div>
    <form>
        <div class="form-group">
            <div class="form-inline">
                <label class="control-label">Select Product:</label>
                <select class="form-control" name="productId" id="products">
                    {{#products}}
                        <option value="{{id}}">{{name}}</option>
                    {{/products}}
                </select>
            </div>
        </div>
        <div class="form-inline form-group">
            <label class="control-label">Quantity:</label>
            <input class="form-control" min="1" max="999" name="quantity" id="quantity" type="number" value="1" required>
        </div>
        <div class="form-group">
            <input onclick="addToCart()" type="button" class="btn btn-success" id="submit" value="Add To Cart">
        </div>
    </form>

</div>

<div id="shopcart_area">

</div>
<div class="container">
<input onclick="clearCart()" type="button" class="btn btn-primary" id="submit" value="Clear Cart">
</div>
<br>

<script src="views/js/cartStorage.js"></script>
