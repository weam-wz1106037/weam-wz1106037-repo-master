<div class="container-fluid">
    <div class="page-header">
        <h1>Shop Products <small style="font-size: 14px">Last Visit Date & Time: {{date}}</small></h1>
    </div>
    <form method="post" action="/api/products">
        <div class="form-group">
            <div class="form-inline">
                <label class="control-label">Select Product:</label>
                <select class="form-control" name="productId" id="products">
                    {{#products}}
                        <option value="{{id}}">{{name}}</option>
                    {{/products}}
                </select>
            </div>
        </div>
        <div class="form-inline form-group">
            <label class="control-label">Quantity:</label>
            <input class="form-control" name="quantity" id="quantity" type="number" value="1">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" id="submit" value="Add To Cart">
        </div>
    </form>

</div>


{{#if shoppingCart}}
    <h2>Shopping Cart:</h2>
    <div class="table-responsive">
        <table id="productsTable" class="table" name="products">
            <thead>
            <tr>
                <th>Item Name</th>
                <th>Item Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Item Image</th>
            </tr>
            </thead>
            <tbody>
            {{#each shoppingCart}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.totalPrice}}</td>
                    <td><img style="width: 100px;height: 100px" src='../imgs/{{this.image}}'></td>
                </tr>
            {{/each}}
                <tr>
                    <th>Sub Total Price: {{subtotal}}</th>
                </tr>
                <tr>
                    <td></td>
                </tr>
            </tbody>
        </table>

    </div>
{{/if}}

